<h1>My Portfolio</h1>

<h3>Search for Stocks</h3>
<div id="stock-lookup" class="row">
    <%= form_tag search_stocks_path, remote: true, method: :get, id: "stock-lookup-form" do %>
        <div class="form-group row no-padding text-center col-md-12">
            <div class="col-md-10">
                <%= text_field_tag :stock, params[:stock], placeholder: "End stock symbol", class: "form-control search-box input-lg" %>
            </div>
            <div class="col-md-2">
                <%= button_tag(type: :submit, class: "btn btn-lg btn-block btn-success") do %>
                    <i class="fa fa-search"></i> Submit
                <% end %>
            </div>
        </div>
    <% end %>
</div>
<div id="results">
  <%= render 'users/result' %>
</div>